	function setImage(imgObj) {
		pageImgObj = document.getElementById("RotatingImage");
		anchorImgObj = document.getElementById("RotatingImageAnchor");

		pageImgObj.src = imgObj.src;
		pageImgObj.alt = imgObj.alt;
		pageImgObj.title = imgObj.alt;
		anchorImgObj.href = imgObj.href;
	}

	function setRandomImage() {
		numImages = imgArr.length;
		
		randNum = Math.floor(Math.random() * 10000);
		randPick = randNum % numImages;
		randImgObj = imgArr[randPick];

		setImage(randImgObj);
	}
	
	// now get the imgArr ready
	imgArr = new Array();

	imgObj = new Object();
	imgObj.href = "/about/physics-images/cathedral.cfm";
	imgObj.alt = "Star clusters resemble a Gothic cathedral";
	imgObj.src = "/about/physics-images/images/cathedral-home.jpg";
	imgArr[0] = imgObj;

	// everything is set, just set a random image on load
	setRandomImage();
	
</script>
