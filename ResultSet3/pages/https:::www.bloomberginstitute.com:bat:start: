<script  type="text/javascript">
	jQuery(window).load(function() { doResizing() }).resize(function() { doResizing() });
	
	function doResizing() {
		// Left and right sidebars should be the same height (to allow elements within them to be sized to match)
		var lr = jQuery('#sidebar-left, #sidebar-right'), tab = lr.find('.tab-pane');
		if (lr.length === 2) lr.addClass('span6');

		// The order here is important -- it ensures that the left/right sidebars and their contents can resize appropriately.
		lr.sizeTo();
		tab.sizeTo();
		lr.equalHeights();
		tab.sizeTo(jQuery('#sidebar-left').height()-jQuery('#sidebar-left .nav-tabs').outerHeight(), true);
	
		// Add span classes to certain widgets on certain pages.
		jQuery('.page-universities #sidebar-top .widget').addClass('span6');
		jQuery('.page-universities #sidebar-bottom .widget').addClass('span4');
		
		// Resize some elements to fill available space in their parent containers.
		jQuery('#sidebar-top .info-block').sizeTo().sizeTo(jQuery('#sidebar-top').parent().height(), true);
		jQuery('#sidebar-bottom .quote-block').sizeTo().sizeTo(jQuery('#sidebar-bottom').parent().height(), true);
		
	}
	
	doResizing() // Resize on init.
	jQuery('a[data-toggle="tab"]').live('shown', function (e) { doResizing(); }); // Resize if we're showing new tab content.
	
	// If the carousel contains only one slide, don't show the slide indicator.
	var ci = jQuery('.carousel .indicators');
	if (ci.children().length <= 1) ci.hide();
	
</script>

