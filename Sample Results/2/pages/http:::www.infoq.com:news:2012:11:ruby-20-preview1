<script type="text/javascript">
	$(document).ready(function() {
		// Login dropdown
		$('.top-right a.login').click(function() {			
			var popup = $('#popupLogin'),
				link = $('.top-right a.login'),
				position = link.parent().position();

			action=new Function("void(0);");
			link.toggleClass('login-active');
			popup.css('left', position.left);
			popup.toggle();
			
		});		

		var popupOut = $('.popupOut'),
			popup = $('#popupLogout');
		if (popupOut.length > 0) {
			var w = popupOut.width();
			var wL = $('#welcomeLabel').width();
			popup.css({
					width: (w + wL + 78) + 'px',
					left: '-' + (w + wL + 98) + 'px'
			})
			popupOut.click(function() {
					popup.toggle();
			});
		}
	});	
</script>


