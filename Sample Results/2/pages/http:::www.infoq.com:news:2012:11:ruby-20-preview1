<script type="text/javascript">
		$(document).ready(function() {
		    var noleftbartextlinks='';			
			
			for(i=1; i<6; i++){					
					$("#textlink"+i).append($("#divtextlink"+i+" > div"));
					$("#divtextlink"+i+" > div").remove();
					
					// remove the height and width from all elements under the $("#textlink" + i) as it seems goole started to inforce the size on the textlinks to 120x100. This has started today: 2011-11-17.
					// this size needs to be specified in GAM as no element can be created without a size. Today there are divs so this is why I wanted to remove the size from all elements under
					// the li
					//2011-11-18 they removed the height and width props from the div they generate. I also remove this so that all appears correctly. I leave it only commented in casase this is needed again. 
					//$("#textlink" + i).children().css("height","auto");
					//$("#textlink" + i).children().css("width","auto");
			}	
			checkToDisplayGAMADs("textlink1", "textlink1");
			checkToDisplayGAMADs("textlink2", "textlink2");
			checkToDisplayGAMADs("textlink3", "textlink3");
			checkToDisplayGAMADs("textlink4", "textlink4");
			checkToDisplayGAMADs("textlink5", "textlink5");
			if(noleftbartextlinks=='true'){
				if($("#home_textlinks > li:has(div)").length>0){
					$('#widgetSponsoredLinks').show();
					$('.adsTowerWrap').css('display', 'block');	
					// resize the reserved space 
					$('#hometextlinks').css("height","auto");
					$("#home_textlinks > li:visible:last").addClass("last");
				}else{
					// hide the div above the hometextlinks div which acts like a predefined reserved space there because there are no links
					$('.adsTowerWrap').css('display', 'none');	               
				}
			}else{ //textlinks in the content page use case			    
				//eliminate <br> and </br> in this specific use case
				for(i=1; i<6; i++){					
					var linkContent = $("#textlink" + i + " > div").html();
					if (linkContent == null || linkContent == '')
						continue;
										
					//perform a global case insensitive REGEX search
					//search and replace the <br> and <br/>, followed, preceded, surrounded by spaces or without any spaces around them
					$("#textlink" + i + " > div").html(linkContent.replace(/\s*<br>\s*|\s*<br\/>\s*/ig, ' '));					
				}				
				
				//display the text links region
				if($("#textlinks > ul >li:has(div)").length>0){
					$('#textlinks').show();
				}				
			}
	     });				
</script>	
