<script type="text/javascript">
$(function(){
	$("#widget-01-open-butt").click(function(){
		$("#widget-01-open").toggle();
		$("#widget-01-close").toggle();
		return false;
	});
	$("#widget-01-close-butt").click(function(){
		$("#widget-01-open").hide();
		$("#widget-01-close").show();
	});	
	loadBookmarks();
}); 

//gets the bookmarks in JSON format via an AJAX call 		
function loadBookmarks(){    
	var bookmarksURL='/widgets/bookmarkWidget.action;jsessionid=3F3154712CC710F768759643358604FE';         
	
	$.ajax({
  	    type: "POST",
		url: bookmarksURL, 
		contentType: "application/x-www-form-urlencoded; charset=utf-8",		 				
		dataType: "json",
		success: function(data){
			//constructing the list with bookmark links			
			displayBookmarks(data);
		},
		error: function(){
			// fail silently
		}
	});
}               

//displays the bookmarks list in the widget    
function displayBookmarks(data){    
    if (data != null && data[0] != null && data[0][1] != null && data[0][2] != null && data[0][3] != null ){
		var urlone= data[0][0] + '/' + data[0][1] + '/' + data[0][2];
		$("#bookone").attr('href', urlone);
		$("#bookone").html(data[0][3]);
   		$("#bookone").css({"display" : "block"});
   		//default message
   		$("#nobooks").html("");
   		$("#nobooks").css({"display" : "none"});
   	}else{   	    
   		//default message
   		$("#nobooks").html("You have no bookmarked content");
   		$("#nobooks").css({"display" : "block"});
   	}
   	if (data != null && data[1] != null && data[1][1] != null && data[1][2] != null && data[1][3] != null ){
		var urltwo= data[1][0] + '/' + data[1][1] + '/' + data[1][2];
		$("#booktwo").attr('href', urltwo);		
   		$("#booktwo").html(data[1][3]);
   		$("#booktwo").css({"display" : "block"});
   	}
   	if (data != null && data[2] != null && data[2][1] != null && data[2][2] != null && data[2][3] != null ){
		var urlthree= data[2][0] + '/' + data[2][1] + '/' + data[2][2];
		$("#bookthree").attr('href', urlthree);		
  		$("#bookthree").html(data[2][3]);
   		$("#bookthree").css({"display" : "block"});
   	}	    	
}  

//bookmark a content item; an action is triggered on the server side by an AJAX request 
function bookmark(contentTitle){    
    var countryCode= ''; 
   	var uriMapping= 'news';
   	var path= '2012/11/ruby-20-preview1';   	   	                
   	var unencodedurl='/widgets/bookmark.action;jsessionid=3F3154712CC710F768759643358604FE';
   	
  	$.ajax({
  	    type: "POST",
		url: unencodedurl, 
		contentType: "application/x-www-form-urlencoded; charset=utf-8",    	
		data: { "countryCodePart" : countryCode, "uriMappingPart" : uriMapping, pathPart : path, namePart : contentTitle },  				
		success: function(){
			$("#bookmark-message p").fadeIn(2000).fadeOut(4000);
		},
		error: function(){
			$("#bookmark-message-error p").fadeIn(2000).fadeOut(4000);
		}
	});
	//refresh the bookmarks widget; do this on the client without another server hit
	shiftBookmarks(contentTitle);		    	
}       

//used to construct the bookmarks list in real time on the client after the user bookmarks a certain content item     	
function shiftBookmarks(contentTitle){ 
   	//construct the first link
  	var urlone = '' 
  	  		    + '/' + 'news' 
  	   		    + '/' + '2012/11/ruby-20-preview1';
    	    
   	//if the new bookmark link will not introduce duplicates or is identical with the third bookmarked link
   	if (urlone != $("#bookone").attr('href') && urlone != $("#booktwo").attr('href')){ 
   		shiftAll(contentTitle, urlone);	    	
    }else if(urlone == $("#booktwo").attr('href')){  
    	//interchange bookmark one and bookmark two
    	var interchangeUrl = $("#bookone").attr('href');
       	var interchangeContentTitle = $("#bookone").html();
       	$("#bookone").attr('href', $("#booktwo").attr('href'));
       	$("#bookone").html($("#booktwo").html());
       	$("#booktwo").attr('href', interchangeUrl);
       	$("#booktwo").html(interchangeContentTitle);
    }
    //do nothing if the new bookmark link is identical with the first bookmark link existing in the widget
}

//introduce the new bookmark as first in the list shifting the existing bookmarks to the end of the list
function shiftAll(contentTitle, urlone){
	var displayBookOne = $("#bookone").css("display");
   	var displayBookTwo = $("#booktwo").css("display");
        
   	//if second bookmark exists(is displayed) then it becomes bookmark three
   	if (displayBookTwo == 'block'){
   		$("#bookthree").attr('href', $("#booktwo").attr('href'));
   		$("#bookthree").html($("#booktwo").html());
		$("#bookthree").css({"display" : "block"});
    }
             
    //if first bookmark exists(is displayed) then it becomes bookmark two
    if (displayBookOne == 'block'){
    	$("#booktwo").attr('href', $("#bookone").attr('href'));
       	$("#booktwo").html($("#bookone").html());
		$("#booktwo").css({"display" : "block"});     	        
    }    	        	         	    
    	    
    $("#bookone").attr('href', urlone);
	$("#bookone").html(contentTitle);
	$("#bookone").css({"display" : "block"});
	//eliminate default message
	$("#nobooks").html("");
   	$("#nobooks").css({"display" : "none"});
}

//BASE64 encoding utility
var Base64 = {

	// private property
	_keyStr : "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/=",

	// public method for encoding
	encode : function (input) {
		var output = "";
		var chr1, chr2, chr3, enc1, enc2, enc3, enc4;
		var i = 0;

		input = Base64._utf8_encode(input);

		while (i < input.length) {

			chr1 = input.charCodeAt(i++);
			chr2 = input.charCodeAt(i++);
			chr3 = input.charCodeAt(i++);

			enc1 = chr1 >> 2;
			enc2 = ((chr1 & 3) << 4) | (chr2 >> 4);
			enc3 = ((chr2 & 15) << 2) | (chr3 >> 6);
			enc4 = chr3 & 63;

			if (isNaN(chr2)) {
				enc3 = enc4 = 64;
			} else if (isNaN(chr3)) {
				enc4 = 64;
			}

			output = output +
			this._keyStr.charAt(enc1) + this._keyStr.charAt(enc2) +
			this._keyStr.charAt(enc3) + this._keyStr.charAt(enc4);

		}

		return output;
	},

	// public method for decoding
	decode : function (input) {
		var output = "";
		var chr1, chr2, chr3;
		var enc1, enc2, enc3, enc4;
		var i = 0;

		input = input.replace(/[^A-Za-z0-9\+\/\=]/g, "");

		while (i < input.length) {

			enc1 = this._keyStr.indexOf(input.charAt(i++));
			enc2 = this._keyStr.indexOf(input.charAt(i++));
			enc3 = this._keyStr.indexOf(input.charAt(i++));
			enc4 = this._keyStr.indexOf(input.charAt(i++));

			chr1 = (enc1 << 2) | (enc2 >> 4);
			chr2 = ((enc2 & 15) << 4) | (enc3 >> 2);
			chr3 = ((enc3 & 3) << 6) | enc4;

			output = output + String.fromCharCode(chr1);

			if (enc3 != 64) {
				output = output + String.fromCharCode(chr2);
			}
			if (enc4 != 64) {
				output = output + String.fromCharCode(chr3);
			}

		}

		output = Base64._utf8_decode(output);

		return output;

	},

	// private method for UTF-8 encoding
	_utf8_encode : function (string) {
		string = string.replace(/\r\n/g,"\n");
		var utftext = "";

		for (var n = 0; n < string.length; n++) {

			var c = string.charCodeAt(n);

			if (c < 128) {
				utftext += String.fromCharCode(c);
			}
			else if((c > 127) && (c < 2048)) {
				utftext += String.fromCharCode((c >> 6) | 192);
				utftext += String.fromCharCode((c & 63) | 128);
			}
			else {
				utftext += String.fromCharCode((c >> 12) | 224);
				utftext += String.fromCharCode(((c >> 6) & 63) | 128);
				utftext += String.fromCharCode((c & 63) | 128);
			}

		}

		return utftext;
	},

	// private method for UTF-8 decoding
	_utf8_decode : function (utftext) {
		var string = "";
		var i = 0;
		var c = c1 = c2 = 0;

		while ( i < utftext.length ) {

			c = utftext.charCodeAt(i);

			if (c < 128) {
				string += String.fromCharCode(c);
				i++;
			}
			else if((c > 191) && (c < 224)) {
				c2 = utftext.charCodeAt(i+1);
				string += String.fromCharCode(((c & 31) << 6) | (c2 & 63));
				i += 2;
			}
			else {
				c2 = utftext.charCodeAt(i+1);
				c3 = utftext.charCodeAt(i+2);
				string += String.fromCharCode(((c & 15) << 12) | ((c2 & 63) << 6) | (c3 & 63));
				i += 3;
			}

		}

		return string;
	}
}   
</script>

    
    













