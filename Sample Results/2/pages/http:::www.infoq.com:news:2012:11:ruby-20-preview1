<script type="text/javascript">		
		$.ajax({
			url: "/api/recommendationlinks.action",
			contentType: "application/x-www-form-urlencoded; charset=utf-8",
			type: 'POST',
			data: {"topicIds" : "1033,1053,1414,174,5,1142,209,-1000,-1000", "title" : "Ruby 2.0 Preview 1 Released, Final Release in February 2013", "contentPath" : "/news/2012/11/ruby-20-preview1",  "language" : "en"},
			success: displayRelatedContent
		});
		function displayRelatedContent(data) {
			if(data.length>0){
				var trackingCode = "?utm_source=infoq&utm_medium=related_content_link&utm_campaign=relatedContent_news_clk";
				var splitIndex = Math.ceil(data.length/2.0);
				var relatedContentCol = $('<div class="related-content-bottom-col">');			
				for(var i=0;i<data.length;i++){
					var link = $('<p class="entry-'+data[i].contentType+'"><a href="'+data[i].url+trackingCode+'">'+data[i].title+'</a></p>');
					relatedContentCol.append(link);
					if(i==splitIndex-1){
						$('#relatedContent').append(relatedContentCol);
						relatedContentCol = $('<div class="related-content-bottom-col">');
					}
				}
				$('#relatedContent').append(relatedContentCol);
				$('#relatedContent').show();
			}
		}		
</script>

