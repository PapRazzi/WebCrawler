    <script type="text/javascript">
        Do.ready(function() {
            var ck='None';
var start=0,limit=30,$preTag=$(".tags .active"),tag=$.trim($preTag.text()),$container=$(".site-list-wrap"),$sites=$container.find(".site-list"),$more=$container.find(".site-more"),$tags=$(".tags a"),$firstLoading=$('<div class="site-loading"><span class="state">加载中</span></div>');$firstLoading.prependTo($container);var loadFirst=function(b){tag=b;var a=tag;start=0;$sites.html("");$more.find(".stat").text("加载更多");$.ajax({url:"/j/explore/site/tag/"+tag+"/",dataType:"json",data:{start:start,limit:limit},beforeSend:function(){$firstLoading.show();$more.hide()},success:function(c){if(a!==$.trim($preTag.text())){return}$firstLoading.hide();$sites.append(c.html);start=start+limit;$sites.show();if(c.more){$more.show()}},error:function(){$sites.hide();$firstLoading.hide();$more.find(".stat").text("加载出错，点击再试一次");$more.show()}})};var loadItem=function(a){a.preventDefault();$.ajax({url:"/j/explore/site/tag/"+tag+"/",dataType:"json",data:{start:start,limit:limit},beforeSend:function(){$more.addClass("ajax-process");$more.find(".stat").text("加载中")},success:function(b){$sites.append(b.html);$more.removeClass("ajax-process");start=start+limit;if(b.more){$more.find(".stat").text("加载更多");$more.show()}else{$more.hide()}},error:function(){$more.removeClass("ajax-process");$more.find(".stat").text("加载出错，点击再试一次");$more.show()}})};$more.bind("click",function(a){if($more.hasClass("ajax-process")){return}loadItem(a)});$tags.bind("click",function(b){b.preventDefault();var a=$(this);$preTag.removeClass("active");loadFirst(a.text());a.addClass("active");$preTag=a});loadFirst(tag);
        });
    </script>

    
    
