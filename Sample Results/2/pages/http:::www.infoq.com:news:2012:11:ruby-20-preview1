	<script src="/dwr/interface/UserConfirmation.js;jsessionid=3F3154712CC710F768759643358604FE" type="text/javascript"></script>
	<script type="text/javascript">
	$(document).ready(function() {		
		// this will execute towards the end as it is added towards the end of the page, so it is queued at the end by jquery when calling ready.(there are other things queued in front regarding rss links, see header and follow us box)
		// use a callback to display the rss links(or not) on a first time access.
		UserConfirmation.confirm('ZWKlU3JsIkNZGrmoGnTNiXdZj4yYDlsW', {
			  callback:function(fixedToken) {		
			    	if(fixedToken){
			    		correctRssLinks(fixedToken)		
					}else{
						//there seems to be a problem with the fixed token(eg. user not saved in db), hide the rss links
						disableRssLinks();
					}
			  },
			  errorHandler:function(errorString, exception) { 
			  	//do nothing
			  }
		});
	});
	</script>








