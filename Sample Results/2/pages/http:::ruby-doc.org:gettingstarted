  <script  type="text/javascript">
  var index_core = 2;
   var index_stdlib = 1;


function showItemsCore() {
    $(this).text('hide');
    $('ul#core-api-list li:gt('+index_core+')').show();
    }

function hideItemsCore() {
    $(this).text('more...');
    $('ul#core-api-list li:gt('+index_core+'):not(.more)').hide();
}

function showItemsStdlib() {
    $(this).text('hide');
    $('ul#stdlib-api-list li:gt('+index_stdlib+')').show();
}
function hideItemsStdlib() {
    $(this).text('more...');
    $('ul#stdlib-api-list li:gt('+index_stdlib+'):not(.more)').hide();
}
    $(document).ready(function() {
  
     $('ul#core-api-list li:gt('+index_core+')').hide();
      $('ul#core-api-list').append('<li class="more"><a href="#">more...</a></li>');
      $('ul#core-api-list li.more a').toggle(showItemsCore, hideItemsCore);

     $('ul#stdlib-api-list li:gt('+index_stdlib+')').hide();
      $('ul#stdlib-api-list').append('<li class="more"><a href="#">more...</a></li>');
      $('ul#stdlib-api-list li.more a').toggle(showItemsStdlib, hideItemsStdlib);


    });




</script>
