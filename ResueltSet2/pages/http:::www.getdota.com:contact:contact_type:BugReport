<script>
	var max_files = 10;
	function addField(obj){
		$(obj).before('<p class="new-field"><input type="file" name="file[]" /> <span onclick="removeField(this);"></span></p>');
		if($(".field-file > p").length >= max_files)$("#add_field").remove();
	}
	
	function removeField(obj){
		$(obj).parent().remove();
		if($(".field-file > p").length == max_files - 1)$(".field-file").append('<div id="add_field" onclick="addField(this);">Add another attachment</div>');
	}
	
	function formContact(obj){
		$('#send_email').show();
		$('#betasignupform').hide();
		hilightMenuItem(obj);
		$('#contact-page-header').html('Contact');
		$('#contact_type').val('Contact');
		$('#notes').html('<small>* Email address needed incase I have questions</small>');
		$('#attachment-text').html('Attachment:');
		$('#button').val(' Send Email ');
		$('#text-text').html('Message:');
		$('#files > .field-file').html('<p><input type="file" name="file[]" /></p><div id="add_field" onclick="addField(this);">Add another attachment</div>');
		$('#files').show();
		$('#subject').show();
		$('#ftp-div').hide();
	}
	
	function formBugReport(obj){
		$('#send_email').show();
		$('#betasignupform').hide();
		hilightMenuItem(obj);
		$('#contact-page-header').html('Bug Report');
		$('#contact_type').val('BugReport');
		$('#attachment-text').html('Attachment: <span style="color:red;">*</span>');
		$('#notes').html('<small>*<sup>1</sup> Email address needed incase I have questions</small><br /><small>*<sup>2</sup> Please remember to attach a replay of the bug if you have one</small>');
		$('#button').val(' Send Bug Report ');
		$('#text-text').html('Message:');
		$('#files > .field-file').html('<p><input type="file" name="file[]" /></p><div id="add_field" onclick="addField(this);">Add another attachment</div>');
		$('#files').show();
		$('#subject').show();
		$('#ftp-div').hide();
	}
	
	function formSuggestion(obj){
		$('#send_email').show();
		$('#betasignupform').hide();
		hilightMenuItem(obj);
		$('#contact-page-header').html('Suggestions');
		$('#contact_type').val('Suggestion');
		$('#notes').html('<small>* Email address needed incase I have questions</small>');
		$('#attachment-text').html('Attachment:');
		$('#button').val(' Send Suggestion ');
		$('#text-text').html('Message:');
		$('#files > .field-file').html('<p><input type="file" name="file[]" /></p><div id="add_field" onclick="addField(this);">Add another attachment</div>');
		$('#files').show();
		$('#subject').show();
		$('#ftp-div').hide();
	}
	
	function formMirror(obj){
		$('#send_email').show();
		$('#betasignupform').hide();
		hilightMenuItem(obj);
		$('#contact-page-header').html('Submit Mirror');
		$('#contact_type').val('Mirror');
		$('#notes').html('<small>* Email address needed incase I have questions</small>');
		$('#button').val(' Send Mirror Offer ');
		$('#text-text').html('Server Specs:');
		$('#files').hide();
		$('#files > .field-file').html('');
		$('#subject').hide();
		$('#subject_input').val('');
		$('#ftp-div input').each( function(){
			$(this).val('');
		});
		$('#ftp-div').show();
	}
	
	function formBetaSignup(obj){
		$('#contact-page-header').html('Beta Signup');
		$('#send_email').hide();
		$('#betasignupform').show();
		hilightMenuItem('#BetaSignup');
		$('#contact_type').val('BetaSignup');
	}
	
	function hilightMenuItem(obj){
		$('#contact_categories > p').each( function(){
			$(this).attr('class', '');
		});
		$('#contact_categories2 > p').each( function(){
			$(this).attr('class', '');
		});
		$(obj).attr('class', 'selected');
	}
	
	$(function() {
					formBugReport($('#BugReport'));
				
		$('#contact_categories').click( function() { $('.form_message').html(''); } );
		$('#contact_categories2').click( function() { $('.form_message').html(''); } );
		
		$("#send_email").validate({
			rules: {
				email_from: {
					required: true,
					email: true
				}
			},
			messages: {
				email_from: {
					required: "Email is required",
					email: "Please enter a valid email"
				}
			}
		});	
		
		$("#betasignupform").validate({
			rules: {
				gamertag: {	required: true	},
				gaming_history: {	required: true	},
				whytester: {	required: true	},
				availability: {	required: true	},
				contact_method: {	required: true	}
			}
		});	
	});
		
	function hidePlayersDiv(){
		$('#player-div').hide();
		$('#player-div input').each( function(){
			$(this).val('');
		});
		$('#player-div textarea').each( function(){
			$(this).val('');
		});
		$('#location').attr('class', '');
		$('#replay1').attr('class', '');
		$('#replay2').attr('class', '');
	}
	
	function showPlayersDiv(){
		$('#player-div').show();
		$('#location').attr('class', 'required');
		$('#replay1').attr('class', 'required');
		$('#replay2').attr('class', 'required');
	}

</script>
