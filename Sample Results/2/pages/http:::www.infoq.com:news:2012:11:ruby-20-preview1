<script type="text/javascript">
function displayResearch(researchData){
           //variable that keeps the nr of related research items
		   var relatedCounter = 0;
           //are there any latest research items returned?
           var latestFound = false;
           
		   //latest research is to be shown only on research items not on all content type items
		   // showLatest is a boolean value set on every content page show.jsp(except for articles and minibooks, does not use horizontal)
           var showLatest = false;           
           
           var data = researchData.matchedList; 
           var campaign = '?utm_source=infoqresearch&utm_campaign=rr-content';
                     
           if (data != null && data[0] != null && data[0][0] && data[0][1] != null && data[0][2] != null){				
				$("#research1 > a:not(:last)").attr('href', data[0][0] + campaign);
				$("#research1 > a:not(:last)").css({"display" : "block"});
				$("#research1label").html(data[0][1]);
   				$("#research1 img").attr('src', data[0][2]); 
   				relatedCounter++;	   				 		
   			}   			
   			
   			if (data != null && data[1] != null && data[1][0] && data[1][1] != null && data[1][2] != null){
				$("#research2 > a:not(:last)").attr('href', data[1][0] + campaign);
				$("#research2 > a:not(:last)").css({"display" : "block"});
				$("#research2label").html(data[1][1]);
   				$("#research2 img").attr('src', data[1][2]);
   				relatedCounter++;				
   			}   			
   			
   			if (data != null && data[2] != null && data[2][0] && data[2][1] != null && data[2][2] != null){
				$("#research3 > a:not(:last)").attr('href', data[2][0] + campaign);
				$("#research3 > a:not(:last)").css({"display" : "block"});
				$("#research3label").html(data[2][1]);
   				$("#research3 img").attr('src', data[2][2]);   
   				relatedCounter++;				
   			} 
   			
   		    //before showing it append campaign data
   			$("#research" + relatedCounter + "more").attr("href", "/research;jsessionid=3F3154712CC710F768759643358604FE" + campaign);
   		    //display "Show more>" link
   			if (relatedCounter && relatedCounter<4){
   				$("#research" + relatedCounter + "more").css({"display" : "block"});
   			}
   			
   			//if we have more than zero but fewer than 3 related research items matched fill the blank spaces with latest research items
   			if(showLatest){
   				// only calculate the latest research if needed
	   			if (relatedCounter && relatedCounter<3){   			    
	   			    data = researchData.latestList;	
	   			    campaign = '?utm_source=infoqresearch&utm_campaign=lr-content';	   
	   			    
	   			    if (data != null && data[0] != null && data[0][0] && data[0][1] != null && data[0][2] != null){
	   					$("#lresearch1 > a:not(:last)").attr('href', data[0][0] + campaign);
						$("#lresearch1 > a:not(:last)").css({"display" : "block"});
						$("#lresearch1label").html(data[0][1]);
	   					$("#lresearch1 img").attr('src', data[0][2]);   
	   					latestFound = true;		
	   					
	   					//display "Show more>" link here only if we have 2 related items
	   					if (relatedCounter == 2){
	   						//before showing it append campaign data
	   			   			$("#lresearch1more").attr("href", "/research;jsessionid=3F3154712CC710F768759643358604FE" + campaign);
	   						$("#lresearch1more").css({"display" : "block"});	
	   					}	   					
	   				}
	   				
	   				if (relatedCounter == 1){
	   					if (data != null && data[1] != null && data[1][0] && data[1][1] != null && data[1][2] != null){
	   						$("#lresearch2 > a:not(:last)").attr('href', data[1][0] + campaign);
							$("#lresearch2 > a:not(:last)").css({"display" : "block"});
							$("#lresearch2label").html(data[1][1]);
	   						$("#lresearch2 img").attr('src', data[1][2]);
	   						latestFound = true; 
	   						
	   					    //before showing More research link append campaign data
	   			   			$("#lresearch2more").attr("href", "/research;jsessionid=3F3154712CC710F768759643358604FE" + campaign);
	   						//display "Show more>" link		   					
	   						$("#lresearch2more").css({"display" : "block"});
	   					}	
	   				} 
	   			}
   			}
   			   			
   			//set the size for the research widget depending on the number of matched related items
   			if (relatedCounter == 3){  
   				$("#relatedResearchWidget").css({"width" : "100%"});    				   							
   			}
   			if (relatedCounter == 2){  
   				$("#relatedResearchWidget").css({"width" : "65%"});
   				$("#latestResearchWidget").css({"width" : "33%"});
   				$("#research1").css({"width" : "30%"});
   				$("#research2").css({"width" : "30%"});
   				$("#research3").css({"width" : "1%"});
   				$("#lresearch1").css({"width" : "30%"});
   				$("#lresearch2").css({"width" : "1%"});
   			}
   			   			
   			if (relatedCounter == 1){  
   				$("#relatedResearchWidget").css({"width" : "33%"});
   				$("#latestResearchWidget").css({"width" : "65%"});
   				$("#research1").css({"width" : "30%"});
   				$("#research2").css({"width" : "1%"});
   				$("#research3").css({"width" : "1%"});
   				$("#lresearch1").css({"width" : "30%"});
   				$("#lresearch2").css({"width" : "30%"});
   			}
   			
   			//display the related widget if it is not empty; researchCounter should be a "thruthy" value (>0)
   			if (relatedCounter){  
   				$("#relatedResearchWidget").css({"display" : "block"});
   			}    			
   			//display the latest widget as well if few than 3 research items were matched
   			if(showLatest){
	   			if (latestFound){
	   			    $("#latestResearchWidget").css({"display" : "block"});
	   			}
   			}
}
</script>


					
	
	
