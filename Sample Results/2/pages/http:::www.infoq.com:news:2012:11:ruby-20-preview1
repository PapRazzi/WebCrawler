	<script src="http://cdn2.infoq.com/scripts/ui/jquery.hoverIntent.js;jsessionid=3F3154712CC710F768759643358604FE" type="text/javascript"></script>
<script type="text/javascript">
		var loginMessage;
		var forgotMessage;
		// rss url is used in more places so declare it a global var
		var rssUrl;
		//after page is loaded the RSS link is constructed
		$(function(){
			 buildRSSUrl();			 
		});	
		
		function buildRSSUrl() {
			var token = '';
			token=encodeURIComponent(token); 
			var countryCode= ''; 
			var first = '/rss';
			var second = '/rss.action?token='
			rssUrl = countryCode + first + second + token;
			//change the value of the link
			$('#persfeed').attr('href', rssUrl);

			if(!token){
				// this is usually the case of first time access and userConfirmation.jsp will solve the issue
				// or a more seriuos problem not being able to save the user in db	
				disableRssLinks();
			}
		}
				
		//enable hoverIntent plugin for personas links
		jQuery(".navigation li a").not('.f_headertopic').hoverIntent({
			 sensitivity: 1,
			 interval: 50,
			 over: showTopics,
			 out: function(){}
		});
				
		function showTopics() {		    	    			
			$('.navigation li').removeClass("active");
			$(this).parent().addClass("active");			
		}		
		
		function showDefaultTopics() {
		    $('.navigation li').removeClass("active");
		    $('#pseudopersona').addClass("active");
		}

		function showLoginMessages(loginMessageId, forgotMessageId){
			$('#'+forgotMessageId).hide();			
			$('#'+loginMessageId).html(JSResource.login_sendingRequest);			
			$('#'+loginMessageId).show();
			// loginMessage and forgot message value is used in ok.jsp and notRegistered.jsp loaded in an iframe. Needs to be set here to be accessed from the iframe
			loginMessage=loginMessageId;
			forgotMessage=forgotMessageId;
		}
</script>
    
