        <script type="text/javascript">
            (function($){
                var __nav_hat_dropdown;
                var __nav_hat_timestamp;
                jQuery('.nav_hat .item.has_dropdown').hover(function(event){
                    jQuery(event.target).parent().find('.div_dropdown_container').show();
                },
                function(event){
                    var dropdown = jQuery(event.target).parent().find('.div_dropdown_container');
                   
                    checkLeaveIntent(dropdown);
                });
                
                $(document).ready(function(){
                    var dropdown = $('.div_dropdown_container');
                    
                    var mouseenter = function(dropdown){
                        return function(){
                            __nav_hat_dropdown=dropdown;
                            __nav_hat_timestamp=new Date().getTime() + 1000;
                        };}(dropdown);
                    
                    dropdown.mouseenter(mouseenter);
                    
                    var mouseleave = function(dropdown){
                        return function(){
                            checkLeaveIntent(dropdown)
                        };
                    }(dropdown);
                    dropdown.mouseleave(mouseleave);
                });
                var checkLeaveIntent = function(dropdown){
                    __nav_hat_dropdown=dropdown;
                    __nav_hat_timestamp = new Date().getTime() + 500;
                    setTimeout(function(){checkHide(dropdown);}, 600);
                }
                function checkHide(dropdown){
                    if(__nav_hat_dropdown.get(0) != dropdown.get(0)
                        || __nav_hat_timestamp < new Date().getTime()){
                        dropdown.hide();
                    }
                }
            }(jQuery));
        </script>

