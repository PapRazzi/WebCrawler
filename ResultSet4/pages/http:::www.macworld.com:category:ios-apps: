	s = s_gi(g_sOmnitureReportSuite);
	s.linkTrackVars="prop25,eVar25,events"; 
	s.linkTrackEvents="event19";
	s.events="event19";
	s.prop25 = 'Article Comment';
	s.tl(this,'o','Article Comments');
};
