<script>
    (function(){
        if (jQuery.fn.selectToUISliderUSN) jQuery('.college_search_cin .slider').selectToUISliderUSN();
        var region = jQuery('.college_search_cin .region').show();
        region.children('.stateregion_button').click(function(event){
            event.stopPropagation();
            region.children('.regioncontent').toggle();
            return false;
        });
        var setregionlabel = function(regioncontent){
            if (!regioncontent) regioncontent = jQuery('.region .regioncontent');
            var buttontitle = "";
            regioncontent.find('.checkbox').each(function(){
                var checkbox = jQuery(this).children('input')[0];
                if (checkbox.checked) {
                    //math.max stuff is a workaround of chameleon barfing on less-than signs
                    if (!Math.max(buttontitle.length-32, 0)) {
                        buttontitle += ', ';
                        if (checkbox.name == checkbox.name.toLowerCase()) buttontitle += checkbox.name[0].toUpperCase() + checkbox.name.substring(1);
                        else buttontitle += checkbox.name;
                    }
                    else {
                        buttontitle += '...';
                        return false;
                    }
                }
            });
            if (buttontitle) buttontitle = buttontitle.substring(2);
            else buttontitle = "State/Region";
            regioncontent.parent().children('.stateregion_button').html(buttontitle);
        };
        setregionlabel();
        region.children('.regioncontent').click(function(event){
            event.stopPropagation();
            setregionlabel(jQuery(this));
        });
        jQuery('body').click(function(event){
            event.stopPropagation();
            jQuery('.college_search_cin .regioncontent').hide();
        });
        if (jQuery.fn.serializeAndSubmit) jQuery('.college_search_cin form').serializeAndSubmit({
            "tuition-min":"5000",
            "tuition-max":"50000",
            "enrollment-min":"0",
            "enrollment-max":"14000",
            "name":"Name"
        });
    })();
</script>
