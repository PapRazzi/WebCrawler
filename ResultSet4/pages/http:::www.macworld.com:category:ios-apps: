	FB.Event.subscribe('edge.create', function(response){
		s = s_gi(g_sOmnitureReportSuite);
		s.linkTrackEvents = s.events = "event36";
		s.prop48="facebook share";
		s.linkTrackVars = "prop48,events";
		s.tl(true, 'o', 'Social Media share');
	});
}


