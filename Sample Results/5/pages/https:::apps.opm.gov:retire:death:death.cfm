<script>
function validateForm(oForm) {
	    if(hasValue(oForm.CaseNumber) == false && hasValue(oForm.EmployeeSSN) == false){
			isRequired(oForm.CaseNumber, "You must enter the annuity claim number or social security number of the deceased to report the death of someone who receives benefits from us. Please refer to information about how to contact us if you need further assistance.");
			return false;
		}
		else if(hasValue(oForm.CaseNumber) == true){
			if(oForm.CaseNumber.value.search(/^[a-zA-Z]([0-9])\1{6}/) != -1){
				alert("You must enter a valid claim number.")
				oForm.CaseNumber.focus();
				return false;
			}
		}
		
		if(!isRequired(oForm.DeceasedName, "Please enter the name of the deceased.")) return false;		
				
		
		if(hasValue(oForm.EmployeeSSN) == true && validSsn(oForm.EmployeeSSN.value) == false){
			oForm.EmployeeSSN.focus();
			return false;
		}
		
						
		if(!isRequired(oForm.EmployeeDOB, "Please enter a valid date in the Date of Birth field.")) return false;
		else if(isDate(oForm.EmployeeDOB.value) == false){
			oForm.EmployeeDOB.focus();
			return false;
		}
				
		TodayDate = new Date();
		NewTodayDate = TodayDate.getMonth()+1 + "/" + TodayDate.getDate() + "/" + (TodayDate.getYear() + 1900);			

		if(Date.parse(oForm.EmployeeDOB.value) >= Date.parse(NewTodayDate)) {
			reportError (oForm.EmployeeDOB, "Please enter a date in the past for the Date of Birth field.");		
			return false;
		}	
						
		if(!isRequired(oForm.DeceasedDOD, "Please enter the date of death.")) return false;
		else if(isDate(oForm.DeceasedDOD.value) == false){
			oForm.DeceasedDOD.focus();
			return false;
		}
		
		if(Date.parse(oForm.DeceasedDOD.value) > Date.parse(NewTodayDate)) {
			reportError (oForm.DeceasedDOD, "Please enter a date in the past for the Date of Death field.");		
			return false;
		}			

		if(!validDateRange(oForm.DeceasedDOD.value,oForm.EmployeeDOB.value))
		{
			reportError (oForm.DeceasedDOD, "The difference between the date of birth and date of death should be in the range of 18 to 125 years.");		
			return false;		
		}
	
		if(oForm.survspouse[0].checked == true) {
			if(!isRequired(oForm.SpouseName, "Please enter the name of the surviving spouse.")) return false;
		    if(oForm.SpouseDOB.value != "" && isDate(oForm.SpouseDOB.value) == false){
				oForm.SpouseDOB.focus();
				return false;
			}
			if(oForm.SpouseSSN.value != "" && validSsn(oForm.SpouseSSN.value) == false){
				oForm.SpouseSSN.focus();
				return false;
			}
		
		/*
		if(oForm.survspouse[1].checked == true) {
			if(!isRequired(oForm.HeirName, "Please enter the name of the surviving heir.")) return false;
		    if(oForm.HeirDOB.value != "" && isDate(oForm.HeirDOB.value) == false) {
				oForm.HeirDOB.focus();
				return false;
			}
			if(oForm.HeirSSN.value != "" && validSsn(oForm.HeirSSN.value) == false){
				oForm.HeirSSN.focus();
				return false;
			}
		}*/		
			
		if(!isRequired(oForm.phone, "Please enter a telephone number at which the surviving spouse may be contacted.")) return false;		

		if(oForm.phone.value.search(/[^-0-9\(\) ]/) != -1 ) {
			return reportError(oForm.phone, 'Please enter a valid phone number in the Telephone Number field.\n\nPlease use the format 555-555-5555.' );
		}
		
		if( oForm.phone.value.replace(/[^0-9]/g,"").length != 10 ) {
			return reportError( oForm.phone, 'Please enter a 10 digit phone number in the Phone Number field.' );		
		}
		
		if(!isRequired(oForm.email, "Please enter information about an email address where the surviving spouse may be contacted.") ) return false;			
		}
		if(oForm.Minor[0].checked == true) {
			if(oForm.MinorNumber.value == "") {
				return reportError( oForm.MinorNumber, 'Please enter the number of Surviving minors.' );
			}
		}
		
		if(oForm.Student[0].checked == true) {
			if(oForm.StudentNumber.value == "") {
				return reportError( oForm.StudentNumber, 'Please enter the number of Surviving Students.');					
			}
		}
		
		if(oForm.Disabled[0].checked == true) {
			if(oForm.DisabledNumber.value == "") {
				return reportError( oForm.DisabledNumber, 'You must enter the number of Disabled Dependents.');			
			}
		}
		
		if(!isRequired(oForm.informantName, "You must enter your name.")) return false;
		
		if(!isRequired(oForm.informantPhone, "You must enter your telephone number.")) return false;
		
		if(oForm.informantPhone.value.search(/[^-0-9\(\) ]/) != -1 ) {
			return reportError(oForm.informantPhone, 'Please enter a valid phone number in the Telephone Number field.\n\nPlease use the format 555-555-5555.' );
		}
		
		if( oForm.informantPhone.value.replace(/[^0-9]/g,"").length != 10 ) {
			return reportError( oForm.informantPhone, 'Please enter a 10 digit phone number in the Phone Number field.' );		
		}
		
		return true; 
}
</script>	

