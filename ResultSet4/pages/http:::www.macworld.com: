	$(document).ready(function(){
			var $flickerbox=$("#flickerbox");
			
		$('#home-main-primary .c:eq(0)').mouseenter(function(){
			var pixel="";
			var pos = $(this).offset();
			$flickerbox.css({"top":pos.top+"px"}).show();
		}).mouseleave(function(){
			$flickerbox.hide();
		}).one("mouseover",function(){
			//only once per element
			var pixel = "";
			if(null!=pixel && pixel!=''){
				$("<img height='1' width='1'>").attr("src","pixel").appendTo($flickerbox);
			}
		});
	});

