		$.ajax({
			url: "/api/latestcontent.action",
			contentType: "application/x-www-form-urlencoded; charset=utf-8",
			type: 'POST',
			data: {"categoryAliases" : "development,architecture-design,process-practices,operations-infrastructure,enterprise-architect", "itemsNumber" : "5", "languageCode" : "en"},
			success: displayCategoryWidget
		});
		function displayCategoryWidget(data) {
			addLatestNewsColumn(data['developmentName'], data['development']);
			addLatestNewsColumn(data['architecture-designName'], data['architecture-design']);
			addLatestNewsColumn(data['process-practicesName'], data['process-practices']);
			addLatestNewsColumn(data['operations-infrastructureName'], data['operations-infrastructure']);
			addLatestNewsColumn(data['enterprise-architectName'], data['enterprise-architect']);
			var newLineDom = $('<div class="clearer"></div>');
			$('.top-band-footer').append(newLineDom);
		}
		function addLatestNewsColumn(title, list) {
			var countryCode= '';
			var newColumnDom = $('<div class="footer-column">');
			var titleDom = $('<p>'+title+'</p>');
			newColumnDom.append(titleDom);
			var listDom = $('<ul></ul>');
			newColumnDom.append(listDom);
			for(var it=0;it<list.length;it++){
				var elementDom = $('<li><a href="' + countryCode + list[it]['path'] + '" title="' + list[it]['title'] + '">' + list[it]['title'] + '</a></li>');
				listDom.append(elementDom);
			}
			$('.top-band-footer').append(newColumnDom);
		}
