			//Banner Toggle
			$('#banner-toggle a').click(function(event){
				openHeight = $('.int-features-inner').height() + 'px';
				wideToolHeight = 140 + $('.int-features-inner').height() + 'px';
				if($('#int-features').hasClass('open')){
					$('#int-features').animate({height:'0px'}).removeClass('open');
					$('#wide-panel-banner').animate({height:'140px'});
					$(this).removeClass('open');
				}else{
					$('#int-features').animate({height:openHeight}).addClass('open');
					$('#wide-panel-banner').animate({height:wideToolHeight});
					$(this).addClass('open');
				}
				return false;
				});
	

	
	$(document).ready(function(){
		
		
		//Panel Nav Buttons
				$('#panel-nav a').click(function(){
                var whichPanel = $(this).attr('href');
                var wideTab = $('#wide-panel-nav a[href="' + whichPanel + '"]');
                if($('#int-features').hasClass('open')){
                        $('#int-features').animate({height:'0px'}).removeClass('open');
                }
                if($(whichPanel).css('display') == 'block'){
                        if($('body').hasClass('home')){
                                $(whichPanel).hide();
                                if($('body').width() < '601'){
                                    $('#int-panels').css('height','0px');
                                }
                        } else {
                                $('#int-panels').animate({height:'0px'});
                                $(whichPanel).animate({height:'0px'},function(){
                                        $(whichPanel).hide();
                                });
                        }
                        $(this).removeClass('open');
                        $('#wide-panel-nav a').removeClass('open');
                        $('.new-buzz').show();
                		} else {
                        if($('body').hasClass('home')){
                                $('.panel').hide();
                                $('#panel-nav a').removeClass('open');
                                $('#wide-panel-nav a').removeClass('open');
                                if($('body').width() < '601'){
                                     $(whichPanel).show().animate({height:'430px'});
                                     $('#int-panels').animate({height:'430px'});
                                     $('#main-nav').css('margin-top','1px');
                                     $('.new-buzz').css('display','none');
                                } else {
                                    $(whichPanel).show();
                                }
                                $('.new-buzz').hide();
                        } else {
                                $('.panel').hide().css('height','0px');
                                $('#panel-nav a').removeClass('open');
                                $('#wide-panel-nav a').removeClass('open');
                                if($('body').width() < '601'){
                                     $(whichPanel).show().animate({height:'430px'});
                                     $('#int-panels').animate({height:'430px'});
                                } else {
                                     $(whichPanel).show().animate({height:'415px'});
                                     $('#int-panels').animate({height:'415px'});
                                }
                        }
                        $(this).addClass('open');
                        $(wideTab).addClass('open');
                }
                return false;
        });

	$('#extra-nav-toggle a').click(function(){
		if($(this).hasClass('open')){
			$('#extra-nav').hide();
			$(this).removeClass('open');
		} else {
			$('#extra-nav').show();
			$(this).addClass('open');
		}
		return false;
	});
	$('#extra-nav a').click(function(){
		$('#extra-nav').hide();
		$('#extra-nav-toggle a').removeClass('open');
	});
		   
						  
	});//-- end document Ready
		
	


  	$(document).ready(function(){
		
		
		$( "#accordion" ).accordion({
			active:false,
            collapsible: true,
