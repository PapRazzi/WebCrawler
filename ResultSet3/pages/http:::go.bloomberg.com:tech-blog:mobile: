        if(alcmpid!=null){ qs['alcmpid'] = alcmpid; }
    }
    if(qs.hasOwnProperty('alcmpid') && qs['alcmpid'] != ''){
        BLOOMBERG.util.Cookie.remove('alcmpid', '/', 'bloomberg.com');
